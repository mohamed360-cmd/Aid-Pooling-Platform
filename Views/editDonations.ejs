<div class="mainEditDonationContainer mainAddDonationsContainer">
    <form id="editDonationForm"  class="donation-form">
        <!-- Donation Type -->
        <label for="donationType" class="form-label">Donation Type:</label>
        <input type="text" name="donationId" value="<%-data.id%>" hidden/>
        <select id="donationType" name="donationType" class="form-input" required value="<%-data.Donation_Type%>">
            <option value="monetary">Monetary</option>
            <option value="food">Food</option>
            <option value="clothing">Clothing</option>
            <option value="medical">Medical Supplies</option>
            <option value="other">Other</option>
        </select>
        <br>
    
        <label for="donationDescription" class="form-label">Description:</label>
        <textarea id="donationDescription" name="Donation_Description" class="form-textarea" rows="4" cols="50" placeholder="<%-data.Donation_Description%>" required value="<%-data.Donation_Description%>"></textarea>
        <br>
    
        <label for="quantity" class="form-label">Quantity/Amount:</label>
        <input type="number" id="quantity" name="quantity" class="form-input" min="1" placeholder="Enter quantity or amount" required value="<%-data.Donation_Amount%>">
        <br>
    
        <label for="expiryDate" class="form-label">Expiration Date (if applicable):</label>
        <input type="date" id="expiryDate" name="Expiration_Date" class="form-input" value="<%-data.Expiration_Date%>" required>
        <br>
    
        <label for="location" class="form-label">Pickup/Drop-off Location:</label>
        <input type="text" id="location" name="location" class="form-input" placeholder="Enter address or drop-off point" required value="<%-data.Dontaion_Pickup_Location%>">
        <br>

        <button type="button" class="form-submit-btn" onclick="updateDonation()">Update Donation</button>
    </form>
</div>