<div class="mainAddDonationsContainer">
    <form id="addDonationForm"  class="donation-form">
        <label for="donationType" class="form-label">Donation Type:</label>
        <select id="donationType" name="donationType" class="form-input" required>
            <option value="monetary">Monetary</option>
            <option value="food">Food</option>
            <option value="clothing">Clothing</option>
            <option value="medical">Medical Supplies</option>
            <option value="other">Other</option>
        </select>
        <br>
        <label for="donationDescription" class="form-label">Description:</label>
        <textarea id="donationDescription" name="donationDescription" class="form-textarea" rows="4" cols="50" placeholder="Describe the donation" required></textarea>
        <br>
        <label for="quantity" class="form-label">Quantity/Amount:</label>
        <input type="number" id="quantity" name="quantity" class="form-input" min="1" placeholder="Enter quantity or amount" required>
        <br>
        <label for="expiryDate" class="form-label">Expiration Date (if applicable):</label>
        <input type="date" id="expiryDate" name="expiryDate" class="form-input">
        <br>
        <label for="location" class="form-label">Pickup/Drop-off Location:</label>
        <input type="text" id="location" name="location" class="form-input" placeholder="Enter address or drop-off point" required>
        <br>
        <button type="button" class="form-submit-btn" onclick="addDonation()">Submit Donation</button>
    </form>
</div>